generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Role {
  admin
  super_admin
}

model Users {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password_hash String
  role          Role
  created_at    DateTime @default(now())
}
