

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}
enum Role {
  admin
  super_admin
}

enum CourseLevel {
  NIVEL_1_JESUS_ESTA_VIVO
  NIVEL_2_JESUS_NOS_CAPACITA
  NIVEL_3_JESUS_NOS_ENVIA
  RENACER_MUJERES
  RENACER_HOMBRE
  RENACER_PAREJAS
}
enum EventStatus {
  upcoming
  ongoing
  completed
  cancelled
}

enum Attendance {
  present
  absent
  cancelled
}
model Users{
  id    Int     @id @default(autoincrement())
  name String
  email  String  @unique
  password_hash String
  role Role
  created_at DateTime @default(now())
}

model Students{
  id    Int     @id @default(autoincrement())
  first_name String
  last_name String
  email  String?  @unique
  phone String
  gender String
  direccion String?
  parroquia String?
  asuntos_medicos String
  active  Boolean @default(true)
  created_at DateTime @default(now())
  Enrollments Enrollments[]
  StudentCourses StudentCourse[]
}

model Courses{
  id    Int     @id @default(autoincrement())
  name String  @unique
  description String
  level CourseLevel
  Events Events[]
  StudentCourses StudentCourse[]
}

model Events{
  id    Int     @id @default(autoincrement())
  name String
  course_id Int
  course    Courses @relation(fields: [course_id], references: [id])
  price  Int
  start_date DateTime
  end_date DateTime
  location String
  status EventStatus
  created_at DateTime @default(now())
  Enrollments Enrollments[]
}

model Enrollments {
  id          String   @id @default(uuid())
  student_id  Int
  event_id    Int
  enrolled_at DateTime @default(now())
  notes       String?
  attendance  Attendance?
  student     Students @relation(fields: [student_id], references: [id])
  event       Events   @relation(fields: [event_id], references: [id])
}

model StudentCourse{
  student_id Int
  course_id Int

  student   Students @relation(fields: [student_id], references: [id])
  course    Courses  @relation(fields: [course_id], references: [id])

  @@id([student_id, course_id])
}



